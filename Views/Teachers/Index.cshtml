<script>
    document.getElementById("btnAddTeacher").addEventListener("click", function () {
        // Redirect to the teacher registration page
        window.location.href = "/Teachers/RegristrationForm";
    });
</script>




<!-- Add Bootstrap validation script -->
<script>
    // Client-side validation (Bootstrap 5)
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })();
</script>



