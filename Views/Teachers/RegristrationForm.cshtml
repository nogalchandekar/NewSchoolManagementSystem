
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Registration Form</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #3b8d99, #6b6b83, #aa4b6b);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            margin: 0;
            color: #333;
        }

        .form-container {
            background-color: #ffffffef;
            border-radius: 1.2rem;
            padding: 30px;
            margin: 40px auto;
            max-width: 1100px;
            box-shadow: 0px 5px 25px rgba(0, 0, 0, 0.3);
        }

        .form-header {
            background: linear-gradient(90deg, #0077b6, #00b4d8);
            color: white;
            padding: 20px 25px;
            border-radius: 1rem 1rem 0 0;
            text-align: center;
            font-weight: 600;
            font-size: 1.4rem;
        }

        .section-title {
            background-color: #0077b6;
            color: #fff;
            padding: 8px 12px;
            border-radius: 8px;
            font-size: 1rem;
            margin-bottom: 15px;
            margin-top: 25px;
            font-weight: 500;
        }

        label {
            font-weight: 500;
        }

        .form-control, .form-select {
            border-radius: 8px;
            box-shadow: none;
        }

        .btn-custom {
            background-color: #0077b6;
            color: white;
            border-radius: 8px;
            font-weight: 600;
            padding: 10px 20px;
            transition: all 0.3s ease;
        }

        .btn-custom:hover {
            background-color: #023e8a;
            transform: scale(1.03);
        }

        media (max-width: 768px) {
            .form-container {
                padding: 20px;
                margin: 20px;
            }
        }
    </style>
</head>
<body>

    <div class="container form-container">
        <div class="form-header">
            👩‍🏫 Teacher Registration Form
        </div>

        <form id="teacherForm" method="post" action="/Admin/SaveTeacher">

            <!-- Personal Info -->
            <div class="section-title">Personal Information</div>
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="hidden" id="hdnteachersId" />
                    <label>First Name</label>
                    <input type="text" class="form-control" name="FirstName" id="FirstName" required>
                </div>
                <div class="col-md-4">
                    <label>Last Name</label>
                    <input type="text" class="form-control" name="LastName" id="LastName" required>
                </div>
                <div class="col-md-4">
                    <label>Gender</label>
                    <select class="form-select" name="Gender" id="Gender" required>
                        <option value="">Select</option>
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label>Date of Birth</label>
                    <input type="date" id="dob" class="form-control" name="DateOfBirth">
                </div>
                <div class="col-md-4">
                    <label>Marital Status</label>
                    <select class="form-select" id="MaritalStatus" name="MaritalStatus">
                        <option disabled>Select</option>
                        <option>Single</option>
                        <option>Married</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label>Blood Group</label>
                    <input type="text" class="form-control" id="BloodGroup" name="BloodGroup" placeholder="e.g. B+">
                </div>
            </div>

            <!-- Contact Info -->
            <div class="section-title">Contact Information</div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label>Mobile Number</label>
                    <input type="text" class="form-control" id="MobileNo" name="MobileNo" required>
                </div>
                <div class="col-md-6">
                    <label>Alternate Mobile</label>
                    <input type="text" class="form-control" id="AlternateMobileNo" name="AlternateMobileNo">
                </div>
                <div class="col-md-10">
                    <label>Email ID</label>
                    <input type="email" class="form-control" id="EmailId" name="EmailId" required>
                </div>

                <div class="col-md-12">
                    <label>Address</label>
                    <textarea class="form-control" id="Address" name="Address" rows="2"></textarea>
                </div>
            </div>

            <!-- Professional Info -->
            <div class="section-title">Professional Details</div>
            <div class="row g-3">
                <div class="col-md-4">
                    <label>Qualification</label>
                    <input type="text" class="form-control" id="Qualification" name="Qualification">
                </div>
                <div class="col-md-4">
                    <label>Specialization</label>
                    <input type="text" class="form-control" id="Specialization" name="Specialization">
                </div>
                <div class="col-md-4">
                    <label>Experience (Years)</label>
                    <input type="number" class="form-control" id="ExperienceYears" name="ExperienceYears" min="0" max="50">
                </div>
                <div class="col-md-4">
                    <label>Joining Date</label>
                    <input type="date" class="form-control" id="JoiningDate" name="JoiningDate">
                </div>
                <div class="col-md-4">
                    <label>Department</label>
                    <select class="form-select" name="DepartmentId" id="DepartmentId">
                        <option disabled>Select Department</option>
                        <option>Science</option>
                        <option>Maths</option>
                        <option>English</option>
                        <option>Computer</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label>Designation</label>
                    <select class="form-select" name="DesignationId" id="DesignationId">
                        <option>Select Designation</option>
                        <option>Teacher</option>
                        <option>HOD</option>
                        <option>Coordinator</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label>Salary (₹)</label>
                    <input type="number" class="form-control" name="Salary" id="Salary" placeholder="Enter Salary">
                </div>
            </div>

            <!-- Login Info -->
            <div class="section-title">Login Credentials</div>
            <div class="row g-3">
                <div class="col-md-4">
                    <label>Username</label>
                    <input type="text" class="form-control" name="UserName" id="UserName">
                </div>
                <div class="col-md-4">
                    <label>Password</label>
                    <input type="password" class="form-control" name="Password" id="Password">
                </div>
                <div class="col-md-4">
                    <label>Status</label>
                    <select class="form-select" name="Status" id="Status">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>
            </div>

            <!-- Buttons -->
            <div class="text-center mt-4">
                <button type="submit" id="btnSubmit" class="btn btn-custom me-2">💾 Save</button>
                <a href="/Teachers/Index" class="btn btn-secondary">❌ Cancel</a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/SchoolManagementScripts/Teachers.js"></script>
</body>
</html>



<!-- Add Bootstrap validation script -->
<script>
    // Client-side validation (Bootstrap 5)
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })();
</script>



