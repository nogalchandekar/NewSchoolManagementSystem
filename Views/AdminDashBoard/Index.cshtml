@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Main Dashboard Container -->
<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12 text-center text-md-start">
            <h2 class="fw-bold">Admin Dashboard</h2>
            <p class="text-muted">Quick overview of key metrics and activities</p>
        </div>
    </div>

    <!-- Stats Cards Row -->
    <div class="row g-4">
        <!-- Total Students -->
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow border-0 h-100 hover-card text-white bg-primary rounded-4">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-box bg-white bg-opacity-25 rounded-circle p-3 me-3">
                        <i class="bi bi-people fs-3"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Total Students</h6>
                        <h3 class="mb-0">1,250</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Teachers -->
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow border-0 h-100 hover-card text-white bg-success rounded-4">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-box bg-white bg-opacity-25 rounded-circle p-3 me-3">
                        <i class="bi bi-person-badge fs-3"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Total Teachers</h6>
                        <h3 class="mb-0">85</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Attendance Today -->
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow border-0 h-100 hover-card text-white bg-info rounded-4">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-box bg-white bg-opacity-25 rounded-circle p-3 me-3">
                        <i class="bi bi-check-square fs-3"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Attendance Today</h6>
                        <h3 class="mb-0">95%</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Average Grades -->
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow border-0 h-100 hover-card text-white bg-warning rounded-4">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-box bg-white bg-opacity-25 rounded-circle p-3 me-3">
                        <i class="bi bi-journal-bookmark fs-3"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Average Grades</h6>
                        <h3 class="mb-0">B+</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Sections -->
    <div class="row mt-5 g-4">
        <!-- Recent Activities -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-light fw-bold">📌 Recent Activities</div>
                <div class="card-body">
                    <ul class="list-group list-group-flush small">
                        <li class="list-group-item">New student <strong>Rohit Sharma</strong> admitted to Class 5</li>
                        <li class="list-group-item">Teacher <strong>Mrs. Verma</strong> updated attendance records</li>
                        <li class="list-group-item">Exam schedule released for Class 10</li>
                        <li class="list-group-item">Fee collection report generated</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Upcoming Events -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-light fw-bold">📅 Upcoming Events</div>
                <div class="card-body">
                    <ul class="list-group list-group-flush small">
                        <li class="list-group-item">Annual Sports Day - <span class="text-primary">10 Oct 2025</span></li>
                        <li class="list-group-item">Parent-Teacher Meeting - <span class="text-primary">15 Oct 2025</span></li>
                        <li class="list-group-item">Science Exhibition - <span class="text-primary">22 Oct 2025</span></li>
                        <li class="list-group-item">Diwali Vacation - <span class="text-primary">05 Nov 2025</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    @if (TempData["LoginSuccess"] != null)
    {
        <text>
        Swal.fire({
            icon: 'success',
            title: 'Login Successful',
            text: '@TempData["LoginSuccess"]',
            showConfirmButton: false,
            timer: 2000
        });
        </text>
    }
</script>

<!-- Custom CSS -->
<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 18px rgba(0, 0, 0, 0.15);
        }

    .icon-box {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
