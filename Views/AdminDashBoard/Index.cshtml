
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="row mb-4">
    <div class="col-md-12">
        <h2 class="mb-3">School Dashboard</h2>
        <p class="text-muted">Overview of key metrics and activities in the School Management System.</p>
    </div>
</div>

<!-- Stats Cards Row -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <i class="bi bi-people fs-3 me-3"></i>
                    <div>
                        <h5 class="card-title">Total Students</h5>
                        <h3 class="card-text">1,250</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <i class="bi bi-person-badge fs-3 me-3"></i>
                    <div>
                        <h5 class="card-title">Total Teachers</h5>
                        <h3 class="card-text">85</h3> <!-- Placeholder -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <i class="bi bi-check-square fs-3 me-3"></i>
                    <div>
                        <h5 class="card-title">Attendance Today</h5>
                        <h3 class="card-text">95%</h3> <!-- Placeholder -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <i class="bi bi-journal-bookmark fs-3 me-3"></i>
                    <div>
                        <h5 class="card-title">Average Grades</h5>
                        <h3 class="card-text">B+</h3> <!-- Placeholder -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


